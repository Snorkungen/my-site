---
export type ProjectCardProps = {
    name: string;
    description: string;
    link?: string;
}

const { name, description, link } = Astro.props as ProjectCardProps;
---

<div class="project-card">
    <div class="top">
        <h2>{name}</h2>
    </div>
    <p>{description}</p>
    {link && (
    <a href={link}>More</a>
    )}
</div>