---
export type ProjectCardProps = {
    name: string;
    description: string;
    link?: string;
}

const { name, description, link } = Astro.props as ProjectCardProps;
---

<style lang="scss">
            .project-card {
            max-width: 400px;
            width: 100%;
            padding: 0.5em 1em;
            border-radius: 5px;
            border: 3px solid var(--fg-color);
            border-bottom-color: var(--acc-color);

            p {
                padding: 0.4em 4%;
            }

            a {
                display: block;
                width: 100%;
                text-align: right;
                text-decoration: solid;
                font-size: large;
                font-weight: bold;
                padding-right: 10%;

                color: var(--fg-color);
                transition: color 250ms linear;

                &:hover {
                    cursor: pointer;
                    color: var(--acc-color);
                }
            }

        }
</style>

<div class="project-card">
    <div class="top">
        <h2>{name}</h2>
    </div>
    <p>{description}</p>
    {link && (
    <a href={link}>More</a>
    )}
</div>