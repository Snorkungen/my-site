---
import Layout from "./Layout.astro";

export interface Props {
    title: string;
}

const { content } = Astro.props;
---

<Layout title={content.title}>
    <main class="w-full max-w-screen-md mx-auto block px-4">
        <h1 class="text-center font-semibold text-2xl sm:text-4xl my-4 px-4 border-b-2 border-b-foreground pb-8">
            {content.title}
        </h1>
        <div class="py-6 content">
            <slot />
        </div>
    </main>
</Layout>

<style lang="scss" is:global>
    .content {
        > * + * {
            @apply my-8;
        }

        h2 {
            @apply mt-6 text-2xl sm:text-2xl font-bold;
        }
        
        h3 {
            @apply mt-6 text-xl sm:text-2xl font-bold;
        }

        li {
            margin: 1em 0;
        }

        a {
            text-decoration: underline;
        }

        .astro-code {
            @apply rounded-md p-4
        }
    }
</style>
