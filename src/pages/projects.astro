---
import Layout from "../layouts/Layout.astro";

interface Project {
    name: string;
    description: string;
    href: string;
}

import unTypedprojects from "../assets/projects.json";
import Card from "../components/Card.astro";
const projects: Project[] = unTypedprojects;
---

<Layout title="Jonne Oke's Projects">
    <div class="w-full h-full grid place-items-center">
        <main class="max-w-screen-md mx-auto w-full">
            <h1 class="text-4xl my-9 text-center">My Projects</h1>
            <div class="grid grid-cols-1 grid-flow-row sm:grid-cols-2 gap-2">
                {
                    projects.map(({ name, description, href }) => (
                        <Card title={name} body={description} href={href} />
                    ))
                }
            </div>
        </main>
    </div>
</Layout>
